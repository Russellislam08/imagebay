<% include ./partials/header %>

<div class="container">
  <div class="loginBox">
    <h1>SIGN UP</h1>

    <form action="/register" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="Username"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
<% include ./partials/footer %>
