<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= image.name %></h1>
        
        <div style="width:30%; margin:30px auto;">
            
        <form action="/images/sell/<%= image._id %>?_method=POST" method="POST">
            <img class="img-responsive" src="<%= image.image %>" />
            <div class="form-group">
                Name
                <input class="form-control" type="text" value = <%= image.name %> name="image[name]" readonly/>
            </div>
            <div class="form-group">
                Set a Price
                <input class="form-control" type="number" name="image[price]" min="0.01" step="0.01" required/>
            </div>
            <!-- <div class="form-group">
                <input class ="form-control" type="text" value = <%= image.image %> name="image[image]"/>
            </div> -->
            <div class="form-group">
                Description
                <input class ="form-control" type="text" value = <%= image.description %> name="image[description]" readonly/>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
        
        <p><a href="/images">Go Back</a></p>
        <% include ../partials/footer %>
        </div>
        
        
    </div>
    
</div>