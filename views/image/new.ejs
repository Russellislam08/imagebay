<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Upload a New Image</h1>

    <div style="width: 30%; margin: 30px auto">
      <form action="/images" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="Name"
            name="name"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            placeholder="Price"
            name="price"
            min="0.01"
            step="0.01"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="Description"
            name="description"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="file"
            placeholder="Image"
            name="image"
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-block btn-primary">Submit!</button>
        </div>
      </form>

      <p><a href="/images">Go Back</a></p>
      <% include ../partials/footer %>
    </div>
  </div>
</div>
