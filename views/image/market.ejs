<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Image Bay Marketplace</h1>
    </div>
      <p>
        <a class="btn btn-primary btn-lg" href="/images/"
          >Return to Your Images</a
        >
        </p>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% images.forEach(function(image){ if(image.forSale) { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= image.image %>" />
        <div class="caption">
            <h4><%=image.name %></h4>
            <h4> $<%=image.price %> </h4>
        </div>
        <p>
          <a href="/images/<%=image._id%>" class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% }}); %>
  </div>

  <% include ../partials/footer %>
</div>
