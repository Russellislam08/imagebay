<% include ./partials/header %>

<div class="container">
  <div class="loginBox">
    <h1>LOGIN</h1>

    <form action="/login" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="Username"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-block btn-primary">Log In</button>
      </div>
    </form>

    <h5>No account? Sign up <a href="/register">here</a>.</h5>
  </div>
</div>
<% include ./partials/footer %>
